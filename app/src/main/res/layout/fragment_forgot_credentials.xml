<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.loginFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="475dp"
        android:layout_height="383dp"
        android:layout_marginBottom="350dp"
        android:src="@drawable/login_screen_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailResetInput"
        android:layout_width="224dp"
        android:layout_height="33dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/box_back"
        android:ems="10"
        android:hint="@string/emailAddressPrompt"
        android:inputType="textWebEmailAddress"
        android:paddingLeft="3pt"
        app:layout_constraintBottom_toTopOf="@+id/emailResetSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/emailResetSubmit"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/box_back"
        android:text="@string/feedback_submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="380dp"
        android:layout_height="118dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/forgottenCredentialsPrompt"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/emailResetInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>