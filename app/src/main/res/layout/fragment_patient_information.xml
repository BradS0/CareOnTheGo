<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="-28dp">

    <TextView
        android:id="@+id/extraRelevantInfo"
        android:layout_width="365dp"
        android:layout_height="165dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/box_back"
        android:gravity="center_horizontal"
        android:text="@string/relevant_info_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emergencyNumbers" />

    <TextView
        android:id="@+id/relevantInformationDisplay"
        android:layout_width="343dp"
        android:layout_height="93dp"
        android:layout_marginTop="28dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/extraRelevantInfo"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/extraRelevantInfo"
        app:layout_constraintTop_toTopOf="@+id/extraRelevantInfo"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/emergencyNumbers"
        android:layout_width="370dp"
        android:layout_height="209dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/box_back"
        android:gravity="center_horizontal"
        android:text="@string/ice_numbers_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPatientButton" />

    <TextView
        android:id="@+id/emergencyDetailsDisplay"
        android:layout_width="348dp"
        android:layout_height="139dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/emergencyNumbers"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/emergencyNumbers"
        app:layout_constraintTop_toTopOf="@+id/emergencyNumbers"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/patientSpinner"
        android:layout_width="172dp"
        android:layout_height="32dp"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:prompt="@string/patient_name"
        android:spinnerMode="dialog"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newPatientButton"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimary"
        android:text="@string/new_patient_button"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/patientSpinner"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addressTitle"
        android:layout_width="115dp"
        android:layout_height="17dp"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="10dp"
        android:text="@string/p_address"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/extraRelevantInfo"
        app:layout_constraintTop_toBottomOf="@+id/relevantInformationDisplay" />

    <TextView
        android:id="@+id/patientAddressDisplay"
        android:layout_width="223dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relevantInformationDisplay" />

</androidx.constraintlayout.widget.ConstraintLayout>